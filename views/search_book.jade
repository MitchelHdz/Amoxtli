                // Dropdown Trigger    
    |         
    main
      br
      br
      br
      |             
      .center
        h1 Busca un libro
      |             
      br
      |             
      .container
        form(action='/books/search' method='GET')
          .container.blue-grey.darken-1
            .col.s12
              br
              |                       
              span.icon
                i.fa.fa-search
              |                       
              input#search.validate(type='search', placeholder='Search...', name='q')
            |                 
            .center
              button.btn-large.waves-effect.waves-light(type='submit', name='action')
                | Buscar
                i.mdi-content-send.right
            |                 
            br
