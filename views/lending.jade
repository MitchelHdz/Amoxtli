doctype html(lang='es')
head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    |         
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no')
    |         
    title Pr&eacute;stamos
    // CSS
    link(href='stylesheets/materialize.css', type='text/css', rel='stylesheet', media='screen,projection')
    |         
    link(href='stylesheets/style.css', type='text/css', rel='stylesheet', media='screen,projection')
  |     
body
    header
      .navbar-fixed
        nav
          .nav-wrapper
            a.brand-logo(href='/') Amoxtli
            |                             
            ul.right.hide-on-med-and-down
              li
                a(href='/sessions/logout') Cerrar Sesi&oacute;n
              // Dropdown Trigger
    |         
    main
      br
      |          
      if lendings   
        .container
          each val in lendings
            .center
              .col.s12.m6
                .card.blue-grey.darken-1
                  .card-content.white-text
                    span.card-title Prestamo para el usuario #{val.id_user}
                    |                      
                    p
                      | Libro #{val.id_book} solicitado para prestamo el d&iacute;a #{val.lending_date} con devolucion para el #{val.delivery_date}
                  |                     
                  .card-action
                      form(style="display:inline;", action='/lendings/confirm', method='POST')
                        .container.center
                            input(type='hidden', name='lending_id', value="#{val.lending_id}")
                            button.btn-large.waves-effect.waves-light(type='submit', name='action')
                              | Confirmar
                              i.mdi-content-send.right
                      &nbsp;&nbsp;&nbsp;&nbsp;                  
                      form(style="display:inline;", action='/lendings/decline', method='POST')
                        .container.center
                            input(type='hidden', name='lending_id', value="#{val.lending_id}")
                            button.btn-large.waves-effect.waves-light(type='submit', name='action')
                              | Declinar
                              i.mdi-content-send.right
      else             
        .center
          button.btn-large.waves-effect.waves-light(type='submit', name='action')
            | No hay prestamos por hacer
            i.mdi-content-add-box.right
    |                 
    br
    |         
    footer.page-footer
      .container
        .row
          .center
            h5.white-text Sistema Amoxtli
            |                 
            p.grey-text.text-lighten-4 A&uacute;n en desarrollo.
      |           
      .footer-copyright
        .container
          | &copy; 2015 Derechos Reservados
          a.grey-text.text-lighten-4.right(href='/index') Regresar
    // SCRIPTS
    script(src='https://code.jquery.com/jquery-2.1.1.min.js')
    |         
    script(src='javascripts/materialize.js')
    |         
    script(src='javascripts/init.js')
